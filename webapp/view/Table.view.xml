<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:t="sap.ui.table"
		controllerName="dynamictable.main" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="SAPUI Table">
		<content>
			<t:Table selectionMode="None" rows="{oTableModel>/data}" visibleRowCount="3">
				<t:columns>
					<t:Column>
						<Label text="Column 0" />
						<t:template>
							<Button text="{oTableModel>col0}" press="getSelectedColIndex" width="100%"/>
						</t:template>
					</t:Column>
					<t:Column>
						<Label text="Column 1" />
						<t:template>
							<Button text="{oTableModel>col1}" press="getSelectedColIndex" width="100%"/>
						</t:template>
					</t:Column>
					<t:Column>
						<Label text="Column 2" />
						<t:template>
							<Button text="{oTableModel>col2}" press="getSelectedColIndex" width="100%"/>
						</t:template>
					</t:Column>
					<t:Column>
						<Label text="Column 3" />
						<t:template>
							<Button text="{oTableModel>col3}" press="getSelectedColIndex" width="100%"/>
						</t:template>
					</t:Column>
				</t:columns>
			</t:Table>
		</content>
	</Page>
</core:View>